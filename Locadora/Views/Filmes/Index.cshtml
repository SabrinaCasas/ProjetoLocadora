@model IEnumerable<Locadora.Models.Filme>

@{
    ViewData["Title"] = "Filmes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .Titulo {
        display: inline;
        padding-right: 10px;
    }
</style>

<h1 class="Titulo">@ViewData["Title"]</h1> 
<button class="btn btn-outline-dark" onclick="location.href='@Url.Action("Create", "Filmes")'">Novo filme</button>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GeneroId)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.AnoLancamento)
        </th>
        <th style="text-align: center">
            @Html.DisplayNameFor(model => model.Duracao)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.Nome)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero!.Nome)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.AnoLancamento)
            </td>
            <td style="text-align: center">
                @Html.DisplayFor(modelItem => item.Duracao)
            </td>
            <td style="text-align: right">
                <a asp-action="Edit" asp-route-id="@item.Id"><img src="img/editar.png" height="20px" alt="Editar" title="Editar"/></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><img src="img/excluir.png" height="20px" alt="Excluir" title="Excluir"/></a>
            </td>
        </tr>
    }
    </tbody>
</table>


