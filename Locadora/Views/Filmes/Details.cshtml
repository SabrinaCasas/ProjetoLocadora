@model Locadora.Models.Filme

@{
    ViewData["Title"] = $"Detalhes {@Model.Nome}";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .img-thumbnail {
        float: right;
    }
</style>

<div>
    <h4>Detalhes</h4>
    <hr />
    <img class="img-thumbnail" src="@Model.Imagem" width="250px" alt="@Model.Nome"/>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Genero!.Nome)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AnoLancamento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AnoLancamento)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Duracao)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duracao)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Sinopse)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-controller="Locacao" asp-action="Create" asp-route-id="@Model?.Id">Alugar</a> |
    <a asp-action="Index">Voltar para lista</a>
</div>
